extends layout

block content
    h1= title
    p Welcome to #{title}

    - let items =  results

    div(class = "container-fluid")
        div(class="row")
            each item, index in results 
                div(class="col-sm-2" onclick=`buy(${index})`)
                    ul 
                        li  #{item.gem_name},
                        li  #{item.rarity_level},
                        li  #{item.color}
            script.
                function buy(index){
                    alert('You purchased item ' + index);
                }


