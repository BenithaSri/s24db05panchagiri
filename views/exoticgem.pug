extends layout

block content
    h1= title
    p Welcome to #{title}

    - let items =  results

    div(class = "container-fluid")
        div(class="row m-1")
            each item in results 
                - let destinationUpdate = `dispatch(\"/ExoticGem/update?id=${item._id}\")`
                    div(class="row-sm-2" class="m-1")
                        ul 
                            li  #{item._id}                       
                            li  #{item.gem_name},
                            li  #{item.rarity_level},
                            li  #{item.color}

                    button.btn( class="btn-primary ml-1", onclick= destinationUpdate) Update


    script.
        function dispatch(path){
           window.location.href=path
        }  